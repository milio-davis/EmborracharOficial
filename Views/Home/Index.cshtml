@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="CERVEZAS" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    El momento para pasar con amigos
                    <a class="btn btn-default" asp-controller="Producto" asp-action="Lista" asp-route-categoria="Cervezas">
                        Cervezas
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="VINOS" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    La calidez de uno de ellos
                    <a class="btn btn-default" asp-controller="Producto" asp-action="Lista" asp-route-categoria="Vinos">
                        Vinos
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="WHISKIES" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    La compañia de las noches
                    <a class="btn btn-default" asp-controller="Producto" asp-action="Lista" asp-route-categoria="Vinos">
                        Whiskies
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />
<p class="divider"></p>
<h2 style="text-align:center">Nuestros Productos</h2>


<div class="row">
    @foreach (var item in Model.Productos)
    {
        @Html.Partial("SumarioProductosPartialView", item)
    }
</div>