@model CarritoViewModel

<div class="row checkoutForm">
    <h2>Carrito de Compras</h2>
    <h4> </h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Selected amount</th>
                <th>Drink</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Carrito.ItemsCarrito)
            {
                <tr>
                    <td class="text-center">@line.Cantidad</td>
                    <td class="text-left">@line.Producto.Nombre</td>
                    <td class="text-right">@line.Producto.Precio.ToString("c")</td>
                    <td class="text-right">
                        @((line.Cantidad * line.Producto.Precio).ToString("c"))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="Carrito" asp-action="RemoverDeCarrito" asp-route-drinkId="@line.Producto.ProductoId"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.CarritoTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Orden" asp-action="Checkout">Check out</a>
            <a class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Añadir mas productos <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a asp-controller="Producto" asp-action="Lista" asp-route-category="Cervezas">Cervezas</a></li>
                    <li><a asp-controller="Producto" asp-action="Lista" asp-route-category="Vinos">Vinos</a></li>
                    <li><a asp-controller="Producto" asp-action="Lista" asp-route-category="Whiskies">Whiskies</a></li>
                </ul>
            </a>
        </div>
    </div>
</div>