@model emb.Models.Producto

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.URLImagen" alt="" />
        <div class="caption">
            <h3 class="pull-right">Precio: @Model.Precio.ToString()</h3>
            <h4>Nombre: @Model.Nombre</h4>
        </div>
        <div class="addToCart" text-right">
            <p class="button">
                <a class="btn btn-success" id="cartButton"
                   asp-controller="Carrito" asp-action="AñadirACarrito" asp-route-productoId="@Model.ProductoId">
                    Añadir al carrito
                </a>
            </p>
        </div>
    </div>
</div>